<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/profileCard"
        android:src="@drawable/card"
        android:adjustViewBounds="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCourse"
        tools:text="course"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:layout_alignBottom="@+id/profileCard"
        android:layout_alignLeft="@+id/textAge"
        android:layout_alignStart="@+id/textAge"
        android:textColor="@color/colorText"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textAge"
        tools:text="Age"
        android:textSize="20sp"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/textCourse"
        android:layout_toRightOf="@+id/textName"
        android:layout_toEndOf="@+id/textName"
        android:textColor="@color/colorText"/>

    <TextView
        android:text="TextView"
        android:id="@+id/textName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="Name"
        android:textSize="20sp"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/textAge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textSocieties"
        tools:text="Societies"
        android:layout_marginTop="250dp"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textInterests"
        tools:text="Interests"
        android:textSize="20sp"
        android:layout_marginTop="300dp"
        android:textColor="@color/colorText"
        />

</RelativeLayout>