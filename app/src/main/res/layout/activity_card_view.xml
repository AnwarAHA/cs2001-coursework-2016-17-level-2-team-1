<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/profileCard"
            android:background="@drawable/card_redesign_blank"
            android:adjustViewBounds="false"
            android:layout_alignParentStart="true"
            android:onClick="cardClick"/>

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="201dp"
            android:layout_marginLeft="380dp"
            android:layout_marginTop="20dp"
            android:id="@+id/userProfilePicture"
            android:background="#ffd800"
            android:padding="1dp"
            android:adjustViewBounds="true"
            android:onClick="profilePicClick"/>

        <TextView
            android:text="TextView"
            android:id="@+id/textName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="Name"
            android:textSize="32sp"
            android:layout_marginLeft="32dp"
            android:textColor="@color/colorText"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layoutCourse"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="280dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course:"
                android:textSize="24sp"
                android:textColor="@color/colorText"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textCourse"
                tools:text="course"
                android:textSize="24sp"
                android:layout_marginLeft="3dp"
                android:layout_above="@+id/textAge"

                android:textColor="@color/colorText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutAge"
            android:orientation="horizontal"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="280dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year:"
                android:textSize="24sp"
                android:textColor="@color/colorText"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textAge"
                tools:text="Age"
                android:textSize="24sp"
                android:textColor="@color/colorText"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="600dp"
            android:text="X"
            android:background="@color/colorRed"
            android:onClick="close"/>
    </RelativeLayout>
</LinearLayout>